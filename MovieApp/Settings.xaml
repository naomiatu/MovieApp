<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieApp.Settings"
             x:Name="ThisPage"
             BackgroundColor="{Binding BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Header -->
            <Grid Padding="20,50,20,20" ColumnDefinitions="40,*,40">
                <Button Grid.Column="0"
                        Text="â†"
                        FontSize="24"
                        TextColor="{Binding TextColor}"
                        BackgroundColor="Transparent"
                        Clicked="Back_Clicked"/>

                <Label Grid.Column="1"
                       Text="Settings"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{Binding TextColor}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- General Section -->
            <Label Text="General"
                   FontSize="14"
                   TextColor="{Binding SectionHeaderColor}"
                   Margin="20,10,20,10"
                   FontAttributes="Bold"/>

            <!-- Leave Feedback Card -->
            <Border BackgroundColor="{Binding CardBackgroundColor}"
                    Padding="15"
                    Margin="20,5,20,5"
                    StrokeShape="RoundRectangle 40,40,40,40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LeaveFeedback_Tapped"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="40,*">
                    <Border Grid.Column="0"
                            WidthRequest="40"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle"
                            Padding="0"
                            BackgroundColor="{Binding IconBackgroundColor}"
                            VerticalOptions="Center">
                        <Label Text="ðŸ‘"
                               FontSize="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <VerticalStackLayout Grid.Column="1" 
                                        Spacing="2"
                                        VerticalOptions="Center">
                        <Label Text="Leave feedback"
                               FontSize="16"
                               TextColor="{Binding TextColor}"
                               FontAttributes="Bold"/>
                        <Label Text="Please leave your opions   "
                               FontSize="12"
                               TextColor="{Binding SubtextColor}"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Switch Themes Card -->
            <Border BackgroundColor="{Binding CardBackgroundColor}"
                    Padding="15"
                    Margin="20,5,20,5"
                    StrokeShape="RoundRectangle 40,40,40,40">
                <Grid ColumnDefinitions="40,*,Auto">
                    <Border Grid.Column="0"
                            WidthRequest="40"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle"
                            Padding="0"
                            BackgroundColor="{Binding IconBackgroundColor}"
                            VerticalOptions="Center">
                        <Label Text="ðŸŒ“"
                               FontSize="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <Label Grid.Column="1"
                           Text="Switch themes"
                           FontSize="16"
                           TextColor="{Binding TextColor}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Switch Grid.Column="2"
                            x:Name="ThemeSwitch"
                            OnColor="#4CAF50"
                            ThumbColor="White"
                            VerticalOptions="Center"
                            Toggled="ThemeSwitch_Toggled"/>
                </Grid>
            </Border>

            <!-- Clear Cache Card -->
            <Border BackgroundColor="{Binding CardBackgroundColor}"
                    Padding="15"
                    Margin="20,5,20,5"
                    StrokeShape="RoundRectangle 40,40,40,40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ClearCache_Tapped"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="40,*">
                    <Border Grid.Column="0"
                            WidthRequest="40"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle"
                            Padding="0"
                            BackgroundColor="{Binding IconBackgroundColor}"
                            VerticalOptions="Center">
                        <Label Text="âŠ•"
                               FontSize="24"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="{Binding TextColor}"/>
                    </Border>

                    <Label Grid.Column="1"
                           Text="Clear cache"
                           FontSize="16"
                           TextColor="{Binding TextColor}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Sign Out Card -->
            <Border BackgroundColor="{Binding CardBackgroundColor}"
                    Padding="15"
                    Margin="20,20,20,30"
                    StrokeShape="RoundRectangle 40,40,40,40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SignOut_Tapped"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="40,*">
                    <Border Grid.Column="0"
                            WidthRequest="40"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle"
                            Padding="0"
                            BackgroundColor="{Binding IconBackgroundColor}"
                            VerticalOptions="Center">
                        <Label Text="ðŸšª"
                               FontSize="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <Label Grid.Column="1"
                           Text="Sign out"
                           FontSize="16"
                           TextColor="{Binding TextColor}"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
