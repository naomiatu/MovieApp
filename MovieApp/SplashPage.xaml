<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieProject.SplashPage"
             BackgroundColor="#0F0F0F">

    <Grid>
        <!-- Background gradient effect -->
        <BoxView Color="#0F0F0F" />

        <!-- Animated content -->
        <VerticalStackLayout x:Name="ContentStack"
                             Padding="40"
                             Spacing="30"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- Logo/Title with animation -->
            <VerticalStackLayout x:Name="LogoStack" 
                                 Spacing="10"
                                 HorizontalOptions="Center">
                <Label x:Name="AppTitle"
                       Text="ðŸŽ¬"
                       FontSize="80"
                       HorizontalOptions="Center"
                       Opacity="0"/>

                <Label x:Name="AppName"
                       Text="MOVIEBOX"
                       FontSize="42"
                       FontAttributes="Bold"
                       TextColor="#E50914"
                       HorizontalOptions="Center"
                       Opacity="0"/>

                <Label x:Name="TagLine"
                       Text="Your Personal Cinema"
                       FontSize="14"
                       TextColor="#999"
                       HorizontalOptions="Center"
                       Opacity="0"/>
            </VerticalStackLayout>

            <!-- Input section -->
            <VerticalStackLayout x:Name="InputStack"
                                 Spacing="15"
                                 WidthRequest="320"
                                 Opacity="0">

                <Label Text="Welcome! Who's watching?"
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0"/>

                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#333"
                        StrokeThickness="2"
                        BackgroundColor="#1a1a1a"
                        Padding="0">
                    <Entry x:Name="NameEntry"
                           Placeholder="Enter your name"
                           PlaceholderColor="#666"
                           TextColor="White"
                           FontSize="16"
                           HeightRequest="55"
                           Margin="15,0"/>
                </Border>

                <Button x:Name="StartButton"
                        Text="Get Started"
                        Clicked="StartButton_Click"
                        BackgroundColor="#E50914"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="12"
                        Margin="0,10,0,0"
                        Shadow="{Shadow Brush=#E50914, Radius=20, Opacity=0.5}"/>
            </VerticalStackLayout>

            <!-- Floating movie emojis for decoration -->
            <Grid x:Name="FloatingEmojis"
                  HeightRequest="60"
                  Margin="0,20,0,0"
                  Opacity="0">
                <HorizontalStackLayout Spacing="15" 
                                       HorizontalOptions="Center">
                    <Label Text="ðŸŽ¥" FontSize="24" x:Name="Emoji1"/>
                    <Label Text="ðŸ¿" FontSize="24" x:Name="Emoji2"/>
                    <Label Text="ðŸŽ­" FontSize="24" x:Name="Emoji3"/>
                    <Label Text="â­" FontSize="24" x:Name="Emoji4"/>
                    <Label Text="ðŸŽ¬" FontSize="24" x:Name="Emoji5"/>
                </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>

        <!-- Loading dots indicator  -->
        <HorizontalStackLayout x:Name="LoadingDots"
                               IsVisible="False"
                               Spacing="10"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
            <Label Text="â—" TextColor="#E50914" FontSize="20" x:Name="Dot1"/>
            <Label Text="â—" TextColor="#E50914" FontSize="20" x:Name="Dot2"/>
            <Label Text="â—" TextColor="#E50914" FontSize="20" x:Name="Dot3"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
