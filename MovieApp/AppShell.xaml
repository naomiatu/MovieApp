<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent 
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="Search" Icon="search.png">
            <ShellContent 
                Title="Search"
                ContentTemplate="{DataTemplate local:Search}"
                Route="SearchPage" />
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent 
                Title="Settings"
                ContentTemplate="{DataTemplate local:Settings}"
                Route="SettingPage" />
        </Tab>
        <Tab Title="MoviePage" Icon="movieIcon.png">
            <ShellContent 
             Title="MovieDetailsPage"
             ContentTemplate="{DataTemplate local:MovieDetailsPage}"
             Route="MovieDetailsPage" />
        </Tab>
    </TabBar>

</Shell>