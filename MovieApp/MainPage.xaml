<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieApp.MainPage"
             Title="Movie Project">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Label x:Name="WelcomeLabel" FontSize="24"/>
            <Label Text="Enjoy your movie project!" />

            <Label Text="Shell Tab Layout" 
                   TextColor="White"
                   VerticalOptions="Center" HorizontalOptions="Center"
                   FontFamily="OpenSans_Semibold" FontSize="40" FontAttributes="Bold"/>

            <Label Text="Click a tab below to navigate."
                   TextColor="White"
                   VerticalOptions="Center" HorizontalOptions="Center"
                   FontFamily="OpenSans_Semibold" FontSize="24" FontAttributes="Bold"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>